# =============================================================================
# Newssys 2.0 生产环境配置
# =============================================================================

# =============================================================================
# 应用配置
# =============================================================================
APP__APP_NAME=Newssys
APP__DEBUG=true
APP__ENVIRONMENT=development

# =============================================================================
# 数据库配置 (MySQL)
# =============================================================================
DB__HOST=localhost
DB__PORT=3306
DB__USERNAME=root
DB__PASSWORD=
DB__DATABASE=newssys
DB__CHARSET=utf8mb4
DB__POOL_SIZE=10
DB__MAX_OVERFLOW=20
DB__ECHO=false

# =============================================================================
# 日志配置
# =============================================================================
LOG__LEVEL=INFO
LOG__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG__FILE_PATH=./logs/newssys.log

# =============================================================================
# 爬虫配置
# =============================================================================
CRAWLER__CONCURRENT_LIMIT=5
CRAWLER__TIMEOUT=30
CRAWLER__RETRY_TIMES=3
CRAWLER__RETRY_DELAY=1
CRAWLER__USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
